//This program is to print rectange with * uisng for loop
// *********
// *********
// *********
#include<iostream>
using namespace std;
int main()
{
    int i,j;
    cout<<"Enter number of rows: ";
    cin>>i;
    cout<<"Enter number of columns: ";
    cin>>j;
    
    for(int x=1;x<=i;x++)
    {
        for(int y=1;y<=j;y++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}


//This program is to print hollow rectange with * uisng for loop
//Enter number of rows: 7
//Enter number of columns: 9
// ******
// *    *
// *    *
// ******
#include<iostream>
using namespace std;
int main()
{
    int i,j;
    cout<<"Enter number of rows: ";
    cin>>i;
    cout<<"Enter number of columns: ";
    cin>>j;
    
    for(int x=1;x<=i;x++)
    {
        for(int y=1;y<=j;y++)
        {
            if(x==1||x==i||y==1||y==j)
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }
        cout<<endl;
    }
    return 0;
}


//This program is to print traingle with * uisng for loop
//Enter the length of traingle: 4
// *
// **
// ***
// ****
#include<iostream>
using namespace std;
int main()
{
    int i;
    cout<<"Enter the length of traingle: ";
    cin>>i;
    for(int x=1;x<=i;x++)
    {   
        for(int y=1;y<=x;y++)
        {
            cout<<"*";
        }
        cout<<endl;
    }   
    return 0;
}
